<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="20240904180900-1" author="hmistry">
        <createTable tableName="cat_scan_product">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="cat_scan_product_id" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="cat_scan_product_tokens" type="LONGTEXT">
                <constraints nullable="true"/>
            </column>
            <column name="product_ingredients_text_orig" type="LONGTEXT">
                <constraints nullable="true"/>
            </column>
            <column name="toxin_name_to_display" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="toxin_name_id_dict" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="product_score" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="product_category" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="product_name" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="product_upc" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="alt_prods_cat_scan_ids" type="LONGTEXT">
                <constraints nullable="true"/>
            </column>
            <column name="alt_prods_names" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(50)"/>
            <column name="last_modified_date" type="timestamp"/>
        </createTable>
    </changeSet>

    <changeSet id="20240829180900-2" author="henil">
    <addColumn tableName="cat_scan_product">
        <column name="is_deleted" type="boolean" defaultValue="false">
        </column>
    </addColumn>
    </changeSet>

</databaseChangeLog>
