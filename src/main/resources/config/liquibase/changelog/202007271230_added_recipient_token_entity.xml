<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

	<changeSet id="202007271230" author="vaibhav" dbms="mysql">
		<createTable tableName="recipient_token_entity">
			<column name="id" type="uuid">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="recipient_id" type="varchar(255)">
				<constraints nullable="false" />
			</column>
			<column name="token" type="varchar(255)">
				<constraints nullable="false" />
			</column>
		</createTable>
		<addUniqueConstraint
			tableName="recipient_token_entity" columnNames="recipient_id,token"
			constraintName="unique_recipient_token" />
	</changeSet>

	<changeSet id="202007271230-1" author="urmil.patel">
		<addColumn tableName="recipient_token_entity">
			<column name="device_id" type="varchar(255)">
				<constraints nullable="true"/>
			</column>
		</addColumn>
	</changeSet>

</databaseChangeLog>
